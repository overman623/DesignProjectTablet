<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        layout="@layout/include_title_mode_select"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">
    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:layout_marginTop="60dp"
            >

            <ImageView
                android:id="@+id/img_start_main"
                android:layout_width="280dp"
                android:layout_height="180dp"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center_horizontal"
            >

            <EditText
                android:layout_width="450dp"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:hint="  EMAIL"
                android:paddingLeft="10dp"
                />
            <EditText
                android:layout_width="450dp"
                android:layout_height="60dp"
                android:hint="  PASSWORD"
                android:paddingLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <Button
                android:id="@+id/btn_login"
                android:layout_width="450dp"
                android:layout_height="60dp"
                android:textSize="@dimen/text_size_button"
                android:text="로그인"
                android:background="@drawable/deco_btn_skyblue"
                android:textColor="@color/white"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                >
                <ImageView
                    android:id="@+id/img_naver"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    />
                <Button
                    android:id="@+id/btn_naver"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/deco_btn_none_and_skyblue"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="15dp"
                >
                <ImageView
                    android:id="@+id/img_google"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    />
                <Button
                    android:id="@+id/btn_google"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/deco_btn_none_and_skyblue"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end|center_vertical"
                android:layout_gravity="center_horizontal"
                >

                <Button
                    android:id="@+id/btn_find_email"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="이메일 찾기"
                    android:background="@color/none"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="20dp"
                    />

                <FrameLayout
                    android:layout_width="1dp"
                    android:layout_height="23dp"
                    android:background="@color/white"
                    android:layout_marginRight="5dp"
                    />

                <Button
                    android:id="@+id/btn_find_password"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="비밀번호 찾기"
                    android:background="@color/none"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="20dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_bottom_title"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
