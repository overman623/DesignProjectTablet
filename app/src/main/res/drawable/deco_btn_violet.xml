<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:drawable="@drawable/deco_rectangle_violet" android:state_pressed="true"/>
    <!-- checked -->
    <item android:drawable="@drawable/deco_rectangle_violet" android:state_checked="true"/>
    <!-- focused -->
    <item android:drawable="@drawable/deco_rectangle_violet" android:state_focused="true"/>
    <!-- checked -->
    <item android:state_checked="false"><color android:color="@color/darkgray"></color></item>
    <!-- default -->
    <item
        android:state_pressed="false">
        <color android:color="@color/darkgray"></color>
    </item>
</selector>